@page
@model AplicacionEstudiantil.App.Vistas.Pages.MateriaModel
@{
    ViewData["Title"] = "Materia";
}

<div class="shadow-lg p-3 mb-5 bg-body rounded">Nombre del curso</div>

<!-- inicio acordeon de opciones -->
<div class="accordion" id="accordionPanelsStayOpenExample">
    <!-- Opcion 1-->
    <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
                aria-controls="panelsStayOpen-collapseOne">
                Actividades del Curso
            </button>
        </h2>
        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show"
            aria-labelledby="panelsStayOpen-headingOne">
            <div class="accordion-body">
                <strong>Acontinuacion encontrara las actividades a desarrollar durante el curso.</strong>

                <!-- ingresa la logica para crear las tareas solo la visualiza el profesor -->

                <div class="container">

                    <div class="input-group-prepend">
                        <span class="input-group-text">Titulo y Descripcion de la Actividad</span>
                    </div>
                    <textarea class="form-control" aria-label="Titulo y Descripcion de la Actividad"></textarea>
                </div>

                <div class="btn-group" role="group" aria-label="Basic example">
                    <button type="button" class="btn btn-success">Agregar</button>
                </div>

            </div>

            <!--  campo de texto que el estudiante, el CRUD solo se ve si ingresa el  profesor-->
            <div class="container">
                <p class="text-start">Nombre Actividad: Descripcion de la actividad</p>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <button type="button" class="btn btn-warning">Modificar</button>
                    <button type="button" class="btn btn-danger">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Opcion 2 -->
<div class="accordion-item">
    <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
            aria-controls="panelsStayOpen-collapseTwo">
            Recursos de Apoyo
        </button>
    </h2>
    <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse"
        aria-labelledby="panelsStayOpen-headingTwo">
        <div class="accordion-body">
            <strong>Acontinuacion encontrara relacionados los videos como recurso de apoyo a las actividades del
                curso</strong>
            <br><br><br>
            <!-- ingresa la logica para crear el recurso por parte del docente -->

            <label for="basic-url">Ingrese la URL al video de Apoyo</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon3">URL</span>
                </div>
                <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <!-- Botones para CD -->
                    <button type="button" class="btn btn-success">Agregar</button>
                </div>

            </div>

            <!--  campo donse se cargara el video que solo se ve si el que ingresa es el estudiante,  se carga con la pagina-->

            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="https://youtu.be/jEEOP-BIFhA" allowfullscreen></iframe>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <!-- Botones para CD -->
                    <button type="button" class="btn btn-danger">Eliminar</button>
                </div>
            </div>
            <!--
                en el src="#" se cargaria el enlace del video para que aparezca en la pagina html // fin de la vista del estudiante -->
        </div>
    </div>
</div>
<!-- Opcion 3 -->
<div class="accordion-item">
    <h2 class="accordion-header" id="panelsStayOpen-headingThree">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
            aria-controls="panelsStayOpen-collapseThree">
            Entrega de Actividades
        </button>
    </h2>
    <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse"
        aria-labelledby="panelsStayOpen-headingThree">
        <div class="accordion-body">
            <strong>Realice la entrega en la actividad correspondiente</strong>
            <!-- Por cada actividad creada se debe generar automaticamente un espacio de entrega -->

            <div class="mb-3" class="row">
                <span class="d-inline-block text-truncate" style="max-width: 300px;">Nombre de la Actividad </span>
                <!-- la linea span con el styl truncate es para traer de la base de datos el nombre de la actividad y no se repita si no las primeras 6 palabas -->
                <input class="form-control" type="file" id="formFileMultiple" multiple>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <!-- Botones para Agregar entrega -->
                    <button type="button" class="btn btn-success">Agregar</button>
                </div>
            </div>
        </div>
    </div>
</div>
</div>